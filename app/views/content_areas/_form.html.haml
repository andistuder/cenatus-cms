= form_for @content_area do |f|
  -if @content_area.errors.any?
    #error_explanation
      %h2= "#{pluralize(@content_area.errors.count, "error")} prohibited this content_area from being saved:"
      %ul
        - @content_area.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :content
    = f.text_area :content
  .field
    = f.label :sort_order
    = f.text_field :sort_order
  .actions
    = f.submit 'Save'
